	platform :ios, '5.0'
	pod 'OHHTTPStubs', '~> 3.1.0'
end

target :"Unit Tests (Mac)", :exclusive => true do
  platform :osx, '10.7'
	pod 'OHHTTPStubs', '~> 3.1.0'
end

